<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="app.com.myapp.rebecca.myapp.MainActivity"

    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:text="My Nanodegree Apps!"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
         />



    <Button
        android:id="@+id/PopularMoviesButton"
        android:text="Popular Movies"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#37474f"

        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:onClick="sendMessageBt1"/>


    <Button
        android:id="@+id/StockHawkButton"
        android:text="Stock Hawk"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#37474f"

        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:onClick="sendMessageBt2"/>

    <Button
        android:id="@+id/BuildItBiggerButton"
        android:text="Build it bigger"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#37474f"

        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:onClick="sendMessageBt3"/>

    <Button
        android:id="@+id/MakeYourAppButton"
        android:text="Makye Your App Material"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#37474f"

        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:onClick="sendMessageBt4"/>

    <Button
        android:id="@+id/GoUbiquitousButton"
        android:text="Go Uniquitous"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#37474f"

        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:onClick="sendMessageBt5"/>

    <Button
        android:id="@+id/CapstoneButton"
        android:text="Capstone"
        android:textColor="#ffffff"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#37474f"

        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        android:onClick="sendMessageBt6"/>




</LinearLayout>
